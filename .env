# =============================================================================
# Blue-Green Deployment Template â€” Environment Configuration
# =============================================================================
# This file is loaded by Docker Compose. Never commit this file to git.
# Copy .env.example to .env and adjust values for your environment.
# =============================================================================

# Project
COMPOSE_PROJECT_NAME=appname

# App Configuration
APP_REPLICAS=5
ACTIVE_ENV=blue

# Nginx Mode: "internet" (public-facing with SSL) or "internal" (behind main proxy)
NGINX_MODE=internet
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Domain (used for SSL certificates in internet mode)
DOMAIN_NAME=example.com

# Certbot / Let's Encrypt (internet mode only)
CERTBOT_EMAIL=admin@example.com

# Health Check Configuration (used by switching scripts)
HEALTH_CHECK_RETRIES=5
HEALTH_CHECK_INTERVAL=2

# PostgreSQL Configuration
POSTGRES_USER=appuser
POSTGRES_PASSWORD=changeme_secure_password
POSTGRES_DB=appdb
